<resources>

    <!-- Base application theme. -->
    <!--
    El fichero srtyle.xml sirve para coger temas ya existentes y usarlos
    es decir aplicarlos a nuestra aplicación heredando dicho tema.
    Para Heredar el tema en el atriobuto "parent" de la etiqueta "style"
    especificamos el tema a heredar
    Además dentro del tooBar como podemos ver, se puede espeficiar los colores
    del ficheros colors.xml que queremos que use.git
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--Por ejemplo, este tema podemos customizarlo agregandole etiquetas "item"-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
<!--
Creamos 3 temas personalizados para cada fragment, desde cada xml de cada fragment se linkea cada estilo
-->
    <style name="AppTheme.MiTema1" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">22dp</item>
        <item name="colorButtonNormal">@color/colorGreen</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:background">@color/colorRed</item>
    </style>
    <style name="AppTheme.MiTema2" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
        <item name="colorButtonNormal">@color/colorPurple</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:background">@color/colorGreen</item>
    </style>
    <style name="AppTheme.MiTema3" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">9dp</item>
        <item name="colorButtonNormal">@color/colorRed</item>
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:background">@color/colorYellow</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>


